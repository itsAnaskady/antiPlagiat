@model ContactViewModel
@{
    ViewBag.Title = "Contact";
}
<section class="content">
@if (ViewBag.ajoutNV != null)
{

    <div class="alert alert-success alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <h5><i class="icon fas fa-check"></i> Message envoyé!</h5>
        Votre message est envoyé. L'administrateur vous contactera dès que possible sur votre adress email.
    </div>
    ViewBag.ajoutNV = null;
}
    <!-- Default box -->
    <div class="card">
        <div class="card-body row">
            <div class="col-5 text-center d-flex align-items-center justify-content-center">
                <div class="">
                    <h2>anti<strong>PLAGIAT</strong></h2>
                    <p class="lead mb-5">
                        Ecole Nationale des Sciences Appliquées, 
                        Avenue My Abdallah Km 5 Route d'Imouzzer, 
                        Fès BP 72.<br>
                        Phone: +212535600403 <br />
                        Fax: +212535600386
                    </p>
                </div>
            </div>
            <div class="col-7">
                <form method="post">
                    <div class="form-group">
                        <label  asp-for="Nom">Nom</label>
                        <input type="text" asp-for="Nom" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label  asp-for="Prenom">Prénom</label>
                        <input type="text" asp-for="Prenom" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">E-Mail</label>
                        <input type="email"  asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Subject">Sujet</label>
                        <input type="text" asp-for="Subject" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Message">Message</label>
                        <textarea asp-for="Message" class="form-control" rows="4"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary" value="Envoyer">
                    </div>
                    <div class="text text-danger" asp-validation-summary="All"></div>
                </form>
            </div>
        </div>
    </div>

</section>
<!-- /.content -->
@inject ApplicationDbContext dbContext
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Etudiant | @ViewBag.Title </title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/style/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/style/dist/css/adminlte.min.css">
    <link rel="icon" asp-append-version="true" href="~/images/AppAntiPlagiatLogo.png" />
</head>
<body class="hold-transition sidebar-mini layout-footer-fixed">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-action="Profile" class="nav-link">Profile</a>
                <li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a asp-action="Accueil" asp-controller="Home" class="nav-link">Accueil</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <form method="post">
                    <input type="submit" asp-action="LogOut" asp-controller="Home" class="btn btn-block btn-dark" value="se déconnecter" />
                </form>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a class="brand-link">
                <img src="~/images/AppAntiPlagiatLogo.png" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">anti<b>Plagiat</b></span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a asp-action="Profile" class="d-block">@dbContext.Utilisateurs.FirstOrDefault(x => x.Email == User.Identity.Name).Nom @dbContext.Utilisateurs.FirstOrDefault(x => x.Email == User.Identity.Name).Prenom</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href=@Url.Action("ImporterRapport") class="nav-link">
                                <i class="nav-icon fas fa-upload"></i>
                                <p>
                                    Importer un rapport
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="VosRapports" class="nav-link">
                                <i class="nav-icon fas fa-search"></i>
                                <p>
                                    Consulter vos rapports
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="ListeEnseignants" class="nav-link">
                                <i class="nav-icon fas fa-user"></i>
                                <p>
                                    Liste des enseignants
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-download"></i>
                                <p>
                                    Téléchargements
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-action="" class="nav-link">
                                        <i class="fas fa-edit nav-icon"></i>
                                        <p>Guide des rapports</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-action="" class="nav-link">
                                        <i class="fas fa-arrow-alt-circle-down nav-icon"></i>
                                        <p>Générer un rapport</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            @RenderBody()
        </div>
        <!-- /.content-wrapper -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
            </div>
            <strong>© @DateTime.Now.Year ENSAF, Copyright ensaf.ac.ma</strong> All rights reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/style/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/style/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Theme scripts -->
    <script src="~/style/dist/js/adminlte.min.js"></script>

</body>
</html>

@model Tuple<List<Utilisateur>, List<string>, List<Rapport>>
@{
    ViewBag.Title = "Liste des Rapports";
}

<div id="partial-content-container" style="padding : 1%">
    <div class="card">
        <h4 class="card-header"><b>Liste des rapports</b></h4>
        <div class="card-body">
        @if (Model.Item3.Count == 0)
        {
            <p>Aucun rapport n'a été soumis.</p>
        }
        else
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Étudiant</th>
                        <th>Type de stage</th>
                        <th>Intitulé du rapport</th>
                        <th>Date de soumission</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rapport in Model.Item3)
                    {
                        <tr>
                            <td>@rapport.Etudiant.Nom @rapport.Etudiant.Prenom</td>
                            <td>@rapport.Type</td>
                            <td>@rapport.Intitulé</td>
                    
                        </tr>
                    }
                </tbody>
            </table>
        }
        </div>
    </div>
</div>


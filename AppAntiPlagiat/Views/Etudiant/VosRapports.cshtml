@model List<Rapport>
@{
    ViewBag.Title = "Vos rapports";
}


@{
    ViewBag.Title = "Mes rapports";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="bg-primary bg-light text-dark text-center py-3 ">
                <h2> Mes Rapports:</h2>
            </div>
        </div>
    </div>
</div>

@if (Model.Count == 0)
{
    <p>Aucun rapport n'a été déposé.</p>
}
else
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Nom de fichier</th>
                <th>Type de stage</th>
                <th>Date de dépôt</th>
                <th>status du rapport</th>
                <th>Télécharger le rapport</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rapport in Model)
            {
                <tr>
                    <td>@rapport.Intitulé</td>
                    <td>@rapport.Type</td>
                    <td>@rapport.DateDepot</td>
                    <td>@if (rapport.Validé)
                        {
                            <span style="color : forestgreen">Validé </span>
                        }
                        else
                        {
                            <span style="color : darkgoldenrod">en cours de vérification</span>
                        }
                    </td>
                    <td>@Html.ActionLink("Cliquer pour télécharger", "DownloadPdf", new { id = rapport.Id })</td>
                </tr>
            }
        </tbody>
    </table>
}


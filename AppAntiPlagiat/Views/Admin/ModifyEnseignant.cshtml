@model ModifierEnseignantViewModel
@{
    ViewBag.Title = "ModifierEnseignant";
}
<div class="hold-transition register-page">
    <div class="register-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a class="h1"><b>Modif</b>Enseignant</a>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Id"/>
                    <label for="inputStatus">Nom :</label><br />
                    <div class="input-group mb-3">
                        
                        <input type="text" asp-for="Nom" value="@Model.Nom" class="form-control" placeholder="Nom de l'enseignant">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>

                    </div>
                    <label for="inputStatus">Prénom :</label><br />
                    <div class="input-group mb-3">
                       
                        <input type="text" asp-for="Prenom" value="@Model.Prenom" class="form-control" placeholder="Prénom de l'enseignant">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>

                    </div>
                    <label for="inputStatus">Email :</label><br />
                    <div class="input-group mb-3">
                       
                        <input type="email" asp-for="Email" value="@Model.Email" class="form-control" placeholder="L'Email de l'enseignant">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputStatus">Département :</label><br />
                        <select asp-for="Departement" id="inputStatus" class="form-control custom-select">
                            @if (Model.Departement == "Génie Télécommunications & Réseaux")
                            {
                                <option selected>Génie Télécommunications & Réseaux</option>
                            }
                            else
                            {
                                <option>Génie Télécommunications & Réseaux</option>
                            }
                            @if (Model.Departement == "Génie Sys. Embarqués & Info. Indus")
                            {
                                <option selected>Génie Sys. Embarqués & Info. Indus</option>
                            }
                            else
                            {
                                <option>Génie Sys. Embarqués & Info. Indus</option>
                            }
                            @if (Model.Departement == "Génie Mécanique & Sys. Automatisés")
                            {
                                <option selected>Génie Mécanique & Sys. Automatisés</option>
                            }
                            else
                            {
                                <option>Génie Mécanique & Sys. Automatisés</option>
                            }
                            @if (Model.Departement == "Génie énergétique et Sys. intelligents")
                            {
                                <option selected>Génie énergétique et Sys. intelligents</option>
                            }
                            else
                            {
                                <option>Génie énergétique et Sys. intelligents</option>
                            }
                        </select>
                    </div>

                    <div class="row">
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" onclick="confirm('Voulez-vous vraiment modifier cet enseignant ?')" class="btn btn-primary btn-block">Modifier</button>
                            
                        </div>
                        <div class="col-4">
                            <a href="RechSuppModEnseignant" class="btn btn-primary btn-block">Annuler</a>
                        </div>
                        <!-- /.col -->
                    </div>
                    <div class="text text-danger" asp-validation-summary="All"></div>
                </form>
            </div>
        </div>
    </div>
</div>
       
   



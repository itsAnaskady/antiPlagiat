@model ModifierEtudiantViewModel
@{
    ViewBag.Title = "ModifierEtudiant";
}
<div class="hold-transition register-page">
    <div class="register-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a class="h1"><b>Modif</b>Etudiant</a>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <label for="inputStatus">Nom :</label><br />
                    <div class="input-group mb-3">

                        <input type="text" asp-for="Nom" value="@Model.Nom" class="form-control" placeholder="Nom de l'étudiant">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>

                    </div>
                    <label for="inputStatus">Prénom :</label><br />
                    <div class="input-group mb-3">

                        <input type="text" asp-for="Prenom" value="@Model.Prenom" class="form-control" placeholder="Prénom de l'étudiant">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>

                    </div>
                    <label for="inputStatus">CNE :</label><br />
                    <div class="input-group mb-3">

                        <input type="text" asp-for="CNE" value="@Model.CNE" class="form-control" placeholder="CNE de l'étudiant">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-id-card"></span>
                            </div>
                        </div>

                    </div>
                    <label for="inputStatus">Email :</label><br />
                    <div class="input-group mb-3">

                        <input type="email" asp-for="Email" value="@Model.Email" class="form-control" placeholder="L'Email de l'étudiant">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputStatus">Filière :</label><br />
                        <select asp-for="Filiere" id="inputStatus" class="form-control custom-select">
                            @if (Model.Filiere == "INFO")
                            {
                                <option selected>INFO</option>
                            }
                            else
                            {
                                <option>INFO</option>
                            }
                            @if (Model.Filiere == "INDUS")
                            {
                                <option selected>INDUS</option>
                            }
                            else
                            {
                                <option>INDUS</option>
                            }
                            @if (Model.Filiere == "GMSA")
                            {
                                <option selected>GMSA</option>
                            }
                            else
                            {
                                <option>GMSA</option>
                            }
                            @if (Model.Filiere == "GESI")
                            {
                                <option selected>GESI</option>
                            }
                            else
                            {
                                <option>GESI</option>
                            }
                            @if (Model.Filiere == "GTR")
                            {
                                <option selected>GTR</option>
                            }
                            else
                            {
                                <option>GTR</option>
                            }
                            @if (Model.Filiere == "SEII")
                            {
                                <option selected>SEII</option>
                            }
                            else
                            {
                                <option>SEII</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="inputStatus">Filière :</label><br />
                        <select asp-for="Niveau" id="inputStatus" class="form-control custom-select">
                            @if (Model.Niveau == "1")
                            {
                                <option selected>1</option>
                            }
                            else
                            {
                                <option>1</option>
                            }
                            @if (Model.Niveau == "2")
                            {
                                <option selected>2</option>
                            }
                            else
                            {
                                <option>2</option>
                            }
                            @if (Model.Niveau == "3")
                            {
                                <option selected>3</option>
                            }
                            else
                            {
                                <option>3</option>
                            }
                        </select>
                    </div>

                    <div class="row">
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" onclick="confirm('Voulez-vous vraiment modifier cet étudiant ?')" class="btn btn-primary btn-block">Modifier</button>

                        </div>
                        <div class="col-4">
                            <a href="RechSuppModEtudiant" class="btn btn-primary btn-block">Annuler</a>
                        </div>
                        <!-- /.col -->
                    </div>
                    <div class="text text-danger" asp-validation-summary="All"></div>
                </form>
            </div>
        </div>
    </div>
</div>




